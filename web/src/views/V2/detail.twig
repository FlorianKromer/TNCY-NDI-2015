{% extends 'layout.twig' %}

{% block title %}{{ crise.titre }}{% endblock title %}

{% block content %}
<aside id="main-left-panel" class="col-md-2 navigation">
	<div class="panel panel-warning">
		<div class="panel-heading">
			<h3 class="panel-title">Statut de l'alerte</h3>
		</div>
		<div class="panel-body">
			{{ crise.nomEtat }}
		</div>
	</div>
	
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title">Vue d'ensemble</h3>
		</div>
			<ul>
				<li><a href="#" class="">Éditer les caractéristiques</a></li>
				<li><a href="#" class="">Alerter les réseaux sociaux</a></li>
				<li><a href="{{path('visibilty')}}" class="">Contrôle de visibilité</a></li>
				<li><a href="#" class="">Bilans </a></li>
			</ul>
		</div>
	</div>
</aside>
<main role="main" class="main">
	<div id="main-body" class="col-md-10">
		<h2>{{crise.titre}}</h2>

		<h3>Informations</h3>
		<table class="table table-striped table-hover ">
			<thead>
				<tr class="success">
					<th>Date & Heure</th>
					<th>Lieu</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				<tr class="info">
					<td>{{crise.dateFin}} au {{crise.dateDebut}}</td>
					<td>Cavalaire-sur-Mer</td>
					<td>{{crise.description}}</td>
				</tr>
				</tr>
			</tbody>
		</table> 

		<h3>Résolution</h3>
		<div class="progress progress-striped">
			<div class="progress-bar progress-bar-info" style="width: 20%"></div>
		</div>
			<div id="map-canvas" class="text-center" > 
			</div>	</div>

		<div id="map-canvas" class="text-center" > 
			<span style="VISIBILITY:hidden;display:none">
			</span>
		</div>
	</div>
</main>
{% endblock %}

{% block javascripts %}  
	<script>

	var liste_crise=[];

	var tmp ={id:{{crise.idCrise}}, lat:{{crise.latitude}}, lng:{{crise.longitude}} , nom:"{{crise.titre}}" , rayon: {{crise.rayon}}};
			liste_crise.push( tmp );
	
	</script>
{% endblock %}

